extends layouts

block content
    h1 #{categoria}
    .products
        each product in products
            .product-card
                img(src=product.imagen, alt=product.imagen)
                h2= product.nombre
                p= product.descripcion
                p= `${product.precio}`
                a(href=`/products/${product._id}`)
                    button(type='submit') Detalles del producto